; indicate this is the root of the project
root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
indent_style = space
# indent_size = 2
# https://github.com/editorconfig/editorconfig/issues/89
# rulers = 80, 120

[*.{rb,py,sh,coffee,haml,yml}]
indent_size = 2

[Gemfile*]
indent_size = 2

[Rakefile]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.{js,jsx,es6,ts,tsx,rules}]
indent_size = 2
continuation_indent_size = 4

[*.{html,erb,xml}]
indent_size = 4

[AndroidManifest.xml]
indent_size = 2

[*.{c,m,h,swift}]
indent_size = 4
continuation_indent_size = 8

[*.{java,kt}]
indent_size = 4
continuation_indent_size = 8

[*.{json,cson,code-snippets}]
indent_size = 4

[.eslintrc]
indent_size = 4

[*.{jade,diff,pug,patch]
trim_trailing_whitespace = false

[*.{sublime-project,plist,pbxproj}]
# insert_final_newline = false
indent_style = tab
indent_size = 4

[package.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 8

[*.{txt,md}]
indent_size = 4
# trim_trailing_whitespace = false